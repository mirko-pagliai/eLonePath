{
    "name": "mirko-pagliai/e-lone-path",
    "description": "eLonePath is a data‑driven engine for interactive gamebooks inspired by classic solo gamebooks of the 1980s, designed to bring the book‑centric experience into the digital space without losing its soul",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
        }
    ],
    "require": {
        "symfony/http-foundation": "^8.0",
        "symfony/http-kernel": "^8.0",
        "symfony/routing": "^8.0",
        "twbs/bootstrap": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2.7 || ^12.1",
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "eLonePath\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "eLonePath\\Test\\": "tests/Tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@link-bootstrap-assets"
        ],
        "post-update-cmd": [
            "@link-bootstrap-assets"
        ],
        "link-bootstrap-assets": [
            "@php -r \"if (!file_exists('public/assets/bootstrap')) { mkdir('public/assets/bootstrap', 0755, true); }\"",
            "@php -r \"if (!is_link('public/assets/bootstrap/bootstrap.min.css')) { symlink('../../../vendor/twbs/bootstrap/dist/css/bootstrap.min.css', 'public/assets/bootstrap/bootstrap.min.css'); }\"",
            "@php -r \"if (!is_link('public/assets/bootstrap/bootstrap.min.js')) { symlink('../../../vendor/twbs/bootstrap/dist/js/bootstrap.min.js', 'public/assets/bootstrap/bootstrap.min.js'); }\""
        ],
        "run-server": "php -d opcache.jit=disable -S localhost:8000 -t public",
        "test": "vendor/bin/phpunit --display-skipped --display-deprecations --display-warnings"
    }
}
