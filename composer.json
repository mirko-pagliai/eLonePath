{
    "name": "mirko-pagliai/e-lone-path",
    "description": "eLonePath is a data‑driven engine for interactive gamebooks inspired by classic solo gamebooks of the 1980s, designed to bring the book‑centric experience into the digital space without losing its soul",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
        }
    ],
    "require": {
        "symfony/http-foundation": "^8.0",
        "symfony/http-kernel": "^8.0",
        "symfony/routing": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2.7 || ^12.1",
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "eLonePath\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "eLonePath\\Test\\": "tests/Tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
